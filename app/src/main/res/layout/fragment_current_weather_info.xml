<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_bg_sunny"
    tools:context=".ui.fragment.CurrentWeatherInfoFragment">


    <TextView

        android:id="@+id/txt_current_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="100dp"
        android:text="@string/current_temp_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fefcfc"
        android:textSize="@dimen/current_temp_textsize" />

    <TextView
        android:id="@+id/id_current_weather_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_current_temperature"
        android:layout_centerHorizontal="true"
        android:text="Mostly Clouded "
        android:textColor="#fefcfc"

        android:textSize="@dimen/current_weather_textsize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_current_weather_info"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_current_weather_info"
            android:layout_marginTop="20dp"
            android:layout_weight="33"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Humidity "
                android:textColor="#fefcfc"
                android:textSize="@dimen/current_weather_info" />

            <TextView
                android:id="@+id/txt_current_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="50%"
                android:textColor="#fefcfc"
                android:textSize="@dimen/current_weather_info" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_current_weather_info"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="33"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Due Point "

                android:textColor="#fefcfc"
                android:textSize="@dimen/current_weather_info" />

            <TextView
                android:id="@+id/txt_current_duepoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_weight="33"
                android:text="22"
                android:textColor="#fefcfc"
                android:textSize="@dimen/current_weather_info" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_current_weather_info"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="33"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Pressure "
                android:textColor="#fefcfc"
                android:textSize="@dimen/current_weather_info" />


            <TextView
                android:id="@+id/txt_current_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="299"
                android:textColor="#fefcfc"
                android:textSize="@dimen/current_weather_info" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
